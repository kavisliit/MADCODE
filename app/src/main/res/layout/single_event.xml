<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="388dp"
            android:layout_height="135dp"
            android:layout_marginStart="40dp"
            android:layout_marginLeft="40dp"
            android:layout_marginEnd="40dp"
            android:layout_marginRight="40dp"
            android:background="@drawable/forget"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.506"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/img_event"
            android:layout_width="203dp"
            android:layout_height="125dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:background="@drawable/forget"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/ic_baseline_add_circle_24"
            tools:layout_editor_absoluteY="7dp" />

        <TextView
            android:id="@+id/e_txt1"
            android:layout_width="136dp"
            android:layout_height="32dp"
            android:layout_marginStart="32dp"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="2dp"
            android:fontFamily="@font/roboto_medium"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/img_event"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/e_txt3"
            android:layout_width="142dp"
            android:layout_height="37dp"
            android:fontFamily="@font/roboto_medium"
            app:layout_constraintEnd_toEndOf="@+id/e_txt2"
            app:layout_constraintStart_toStartOf="@+id/e_txt2"
            app:layout_constraintTop_toBottomOf="@+id/e_txt2" />

        <TextView
            android:id="@+id/e_txt4"
            android:layout_width="69dp"
            android:layout_height="36dp"
            android:fontFamily="@font/roboto_medium"
            app:layout_constraintStart_toStartOf="@+id/e_txt3"
            app:layout_constraintTop_toBottomOf="@+id/e_txt3" />

        <TextView
            android:id="@+id/e_txt2"
            android:layout_width="136dp"
            android:layout_height="31dp"
            android:fontFamily="@font/roboto_medium"
            app:layout_constraintEnd_toEndOf="@+id/e_txt1"
            app:layout_constraintStart_toStartOf="@+id/e_txt1"
            app:layout_constraintTop_toBottomOf="@+id/e_txt1" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>