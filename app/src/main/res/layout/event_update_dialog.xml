<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/update_txt"
        android:layout_width="match_parent"
        android:layout_height="71dp"
        android:background="@color/main_color"
        android:capitalize="sentences"
        android:gravity="center"
        android:text="@string/event_update"
        android:textSize="28sp" />

    <EditText
        android:id="@+id/update_pt1"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/forget"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name" />

    <EditText
        android:id="@+id/update_pt2"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="@drawable/forget"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name" />

    <EditText
        android:id="@+id/update_pt3"
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:background="@drawable/forget"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name" />

    <EditText
        android:id="@+id/update_pt4"
        android:layout_width="match_parent"
        android:layout_height="71dp"
        android:background="@drawable/forget"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name" />

    <EditText
        android:id="@+id/update_pt5"
        android:layout_width="match_parent"
        android:layout_height="71dp"
        android:background="@drawable/forget"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name" />

    <Button
        android:id="@+id/edit_btn_save"
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:background="@color/main_color"
        android:text="@string/edit_save"
        app:backgroundTint="@color/main_color" />

</LinearLayout>