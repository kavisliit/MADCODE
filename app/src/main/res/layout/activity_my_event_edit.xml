<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/forget"
    tools:context=".Events.My_event_edit">

    <EditText
        android:id="@+id/my_evet_edit_name"
        android:layout_width="249dp"
        android:layout_height="40dp"
        android:layout_marginStart="56dp"
        android:layout_marginLeft="56dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/forget"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/my_evet_edit_img" />

    <EditText
        android:id="@+id/my_evet_edit_mem"
        android:layout_width="249dp"
        android:layout_height="41dp"
        android:layout_marginTop="17dp"
        android:background="@drawable/forget"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        app:layout_constraintStart_toStartOf="@+id/my_evet_edit_type"
        app:layout_constraintTop_toBottomOf="@+id/my_evet_edit_type" />

    <EditText
        android:id="@+id/my_evet_edit_uri"
        android:layout_width="249dp"
        android:layout_height="41dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/forget"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        app:layout_constraintStart_toStartOf="@+id/my_evet_edit_mem"
        app:layout_constraintTop_toBottomOf="@+id/my_evet_edit_mem" />

    <EditText
        android:id="@+id/my_evet_edit_type"
        android:layout_width="251dp"
        android:layout_height="44dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/forget"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        app:layout_constraintStart_toStartOf="@+id/my_evet_edit_venue"
        app:layout_constraintTop_toBottomOf="@+id/my_evet_edit_venue" />

    <EditText
        android:id="@+id/my_evet_edit_venue"
        android:layout_width="251dp"
        android:layout_height="45dp"
        android:layout_marginTop="17dp"
        android:background="@drawable/forget"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        app:layout_constraintStart_toStartOf="@+id/my_evet_edit_time"
        app:layout_constraintTop_toBottomOf="@+id/my_evet_edit_time" />

    <EditText
        android:id="@+id/my_evet_edit_date"
        android:layout_width="249dp"
        android:layout_height="45dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/forget"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        app:layout_constraintStart_toStartOf="@+id/my_evet_edit_name"
        app:layout_constraintTop_toBottomOf="@+id/my_evet_edit_name" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/my_evet_edit_img"
        android:layout_width="195dp"
        android:layout_height="162dp"
        android:layout_marginStart="76dp"
        android:layout_marginLeft="76dp"
        android:layout_marginTop="4dp"
        android:src="@drawable/ic_launcher_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/my_evet_edit_time"
        android:layout_width="247dp"
        android:layout_height="42dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/forget"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        app:layout_constraintStart_toStartOf="@+id/my_evet_edit_date"
        app:layout_constraintTop_toBottomOf="@+id/my_evet_edit_date" />

    <Button
        android:id="@+id/my_event_edit_btn2"
        android:layout_width="170dp"
        android:layout_height="51dp"
        android:layout_marginStart="112dp"
        android:layout_marginLeft="112dp"
        android:layout_marginTop="8dp"
        android:text="@string/edit_save_btn_event"
        app:backgroundTint="@color/main_color"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/my_evet_edit_uri" />
</androidx.constraintlayout.widget.ConstraintLayout>